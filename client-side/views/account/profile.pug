extends ./index
block variable 
    -var page = "profile";
    -var title = "Thông tin cá nhân"
block content 
    form
        .form-group
            label.col-form-label Email đăng nhập:
            .text.info_detail#text-email= currentAccount.email
            input(type="text" value=currentAccount.email id="email" class="form-control info_edit form-info hidden" readonly="")
            span(class="span_info")
                a(href="#" id="btn_edit" onclick="showInput()")
                    i(class="fas fa-edit") Cập Nhật
        .form-group
            label.col-form-label Username:
            .text.info_detail#text-username= currentAccount.username
            input(type="text" value=currentAccount.username id="username" class="form-control info_edit form-info hidden" readonly="")
        .form-group
            label.col-form-label Họ và tên:
            .text.info_detail#text-name= currentAccount.name
            input(type="text" id="name" value=currentAccount.name class="form-control info_edit form-info hidden")
        .form-group
            label.col-form-label Số điện thoại:
            .text.info_detail#text-phone= currentAccount.phone
            input(type="text" id="phone" value=currentAccount.phone class="form-control info_edit form-info hidden")
        .form-group
            label.col-form-label Số chứng minh nhân dân:
            .text.info_detail#text-cmnd 
            input(type="text" id="cmnd" value="" class="form-control info_edit form-info hidden")
        .form-group
            label.col-form-label Giới tính:
            .text.info_detail#text-gender 
            .form-check.d-none#gender1
                input#flexRadioDefault1.form-check-input(type='radio', name='gender' value="Nam", checked='')
                label.form-check-label(for='flexRadioDefault1') Nam
            .form-check.d-none#gender2
                input#flexRadioDefault2.form-check-input(type='radio', name='gender' value="Nữ")

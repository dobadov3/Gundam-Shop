                        li(role='presentation')
                          a(role='menuitem', tabindex='-1', href='category.html') - M&atilde; s&#x1EA3;n ph&#x1EA9;m
                  
                  input.search-field(placeholder='Tìm kiếm...', name='product')
                  button.search-button(style='border: none; outline: none;')
          .col-lg-2.col-md-3.col-sm-4.col-xs-12.animate-dropdown.top-cart-row
            // SHOPPING CART DROPDOWN
            .dropdown.dropdown-cart
              a.dropdown-toggle.lnk-cart(href='#', data-toggle='dropdown')
                .items-cart-inner
                  .basket
                    // Count Items
                    .basket-item-count
                      span.count= cartLength || 0
                    .total-price-basket
                      span.lbl Giỏ hàng
                      // Total Price
                      span.value= total-cart || 0
              ul.dropdown-menu
                li
                  .cart-item.product-summary
                    // List Products in cart
                    .row
                      .col-xs-4
                        .image
                          a(href='#')
                            img(src='/assets/images/products/p4.jpg', alt='')
                      .col-xs-7
                        // Product's name
                        h3.name
                          a(href='#') Simple Product
                        // Product's price
                        .price $600.00
                      .col-xs-1.action
                        a(href='#')
                          i.fa.fa-trash
                  .clearfix
                  hr
                  .clearfix.cart-total
                    .pull-right
                      span.text T&#x1ED5;ng c&#x1ED9;ng :
                      // Total Price
                      span.price $600.00
                    .clearfix
                    a.btn.btn-upper.btn-primary.btn-block.m-t-20(href='checkout.html') Thanh to&aacute;n
              // /.dropdown-menu
            // /.dropdown-cart
    

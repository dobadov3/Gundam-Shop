.item
    .products
        .product
            .product-image
                .image
                    a(href='/products/detail/' + product.code)
                        img(src=product.image[0], alt='')
                        img.hover-image(src=product.image[1], alt='')
                    .tag.sale
                        span Sale
            // /.product-image
            .product-info.text-left
                h3.name
                    a(href='detail.html')= product.name
                .rating.rateit-small
                    .description
                        .product-price
                            span.price= product.price
                            span.price-before-discount= product.price
                        // /.product-price
            // /.product-info
            .cart.clearfix.animate-effect
                .action
                    ul.list-unstyled
                        li.add-cart-button.btn-group
                            button.btn.btn-primary.icon(data-toggle='dropdown', type='button')
                                i.fa.fa-shopping-cart
                            button.btn.btn-primary.cart-btn(type='button') Add to cart
                        li.lnk.wishlist
                            a.add-to-cart(href='detail.html', title='Wishlist')
                                i.icon.fa.fa-heart
extends ../layouts/layout
block contents
    .container.mt-5
        .row 
            .col-lg-8.col-md-8
                table.table 
                    tr
                        th(colspan=3) Sản phẩm
                        th Giá
                        th Số lượng
                        th Thành tiền
                    include ./cart-item.pug
                    include ./cart-item.pug
                    include ./cart-item.pug
                button(type="button", class="btn btn-outline-danger") 
                    i(class="fal fa-chevron-double-left me-2")
                    span Quay lại cửa hàng
            .col-lg-4.col-md-4.delivery-address 
                table.table.table-delivery-address 
                    tr 
                        th(colspan=2) Thanh toán
                    tr 
                        td Giao hàng 
                        td.text-end Giao đến địa chỉ 246/71 Hòa Hưng 
                    tr 
                        td Tổng cộng 
                        td.text-end 2.868.500₫
                    tr
                        td(colspan=2) 
                            .btn.btn-danger.w-100 Thanh toán
                    tr 
                        td(colspan=2)
                            i(class="fal fa-tags")
                            span Phiếu ưu đãi       
                    tr 
                        td(colspan=2)
                            input.form-control.w-100(type="text", placeholder="Mã ưu đãi")    
                    tr
                        td.border-bottom-0(colspan=2)
                            button.btn.btn-dark.w-100 Áp dụng

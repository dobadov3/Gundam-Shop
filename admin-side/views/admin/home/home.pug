extends ../layouts/layout
block contents
  .row
    .col-lg-8.grid-margin.stretch-card
      .card
        .card-body
          h4.card-title Product  
          canvas#myChart
    .col-lg-4.grid-margin.stretch-card
      .card
        .card-body
          h4.card-title Top Sellers
          .row.justify-content-center        
            .col-lg-6.col-md-4.col
              p(style='color:gold').bestsellerplacement.bestseller.bestsellertext 1st
              img.bestseller.bestsellerimg#bestsellergold(src="")  
              p#bestsellername1.bestseller.bestsellertext 1st
              br
              p#bestsellercount1.bestseller.bestsellertext
          hr
          .row 
            .col-lg-6.col-md-6
              p(style='color:silver').bestsellerplacement.bestseller.bestsellertext 2nd 
              img.bestseller.bestsellerimg#bestsellersilver(src="")  
              p#bestsellername2.bestseller.bestsellertext 2nd   
              br
              p#bestsellercount2.bestseller.bestsellertext   
            .col-lg-6.col-md-6
              p(style='color:brown').bestsellerplacement.bestseller.bestsellertext 3rd
              img.bestseller.bestsellerimg#bestsellerbronze(src="")
              p#bestsellername3.bestseller.bestsellertext 3rd
              br
              br
              p#bestsellercount3.bestseller.bestsellertext

            
                
block script 
    script(src="/assets/admin/js/chart.js") 
    script(src="/assets/admin/js/bestseller.js")